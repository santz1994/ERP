# ERP2026 Environment Configuration
# For Testing and Development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=erp_staging
POSTGRES_USER=erp_staging_user
POSTGRES_PASSWORD=erp_staging_pass
DATABASE_URL=postgresql://erp_staging_user:erp_staging_pass@postgres:5432/erp_staging

# For testing with in-memory database
TEST_DATABASE_URL=sqlite:///:memory:

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
ENVIRONMENT=staging
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
WORKERS=4

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5050
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=7

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_EXPIRATION=3600

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENV=staging
REACT_APP_DEBUG=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001

# AlertManager
ALERTMANAGER_PORT=9093

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_APPROVAL_WORKFLOW=true
ENABLE_BARCODE_SCANNING=true
ENABLE_MATERIAL_DEBT_TRACKING=true
ENABLE_OFFLINE_SYNC=true
ENABLE_TWO_FACTOR_AUTH=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
DAILY_PRODUCTION_APPROVAL_THRESHOLD=500
MATERIAL_DEBT_AGING_DAYS=30
APPROVAL_SLA_HOURS=24

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production
HASH_ALGORITHM=bcrypt
SESSION_TIMEOUT_MINUTES=30

# ============================================================================
# SMTP CONFIGURATION (Notifications)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=noreply@company.com

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================
PYTEST_COV_FAIL_UNDER=90
TEST_DATABASE_ECHO=false
TEST_ASYNC_MODE=asyncio
TEST_TIMEOUT_SECONDS=300

# ============================================================================
# LOGGING
# ============================================================================
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE=/var/log/erp2026/app.log
SENTRY_DSN=

# ============================================================================
# API RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=pdf,xlsx,csv,jpg,png

# ============================================================================
# EXPORT CONFIGURATION
# ============================================================================
EXPORT_ENABLED=true
EXPORT_FORMAT=xlsx
EXPORT_MAX_ROWS=10000
